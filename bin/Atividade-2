import java.util.Scanner;

public class App {
    public static void main(String[] args) throws Exception {

        //1 - Declare e inicialize uma variável do tipo int chamada age com o valor 25. Em seguida, imprima uma mensagem

        int age = 25;
        System.out.println("I am " + age + " years old");

        //2 - Declare duas variáveis do tipo double chamadas num1 e num2 e inicialize-as com quaisquer valores decimais. Em seguida, calcule a soma, a diferença, o produto e o quociente de num1 e num2 e imprima os resultados.

        //2.1 declarar duas variaveis do tipo double (num1 e num2)
        Scanner scanner = new Scanner(System.in);
        System.out.println("Informe o Num1: ");
        double Num1 = scanner.nextDouble();
        System.out.println("Informe o Num2: ");
        double Num2 = scanner.nextDouble();

        //2.2 calcular a soma, a diferença, o produto e o quociente
        double soma = (Num1 + Num2);
        double diferença = (Num1 - Num2);
        double produto = (Num1 * Num2);
        double quociente = (Num1 / Num2);

        //2.3 imprimir os resultados
        System.out.println("A soma dos Nums é: " + soma);
        System.out.println("A diferença dos Nums é: " + diferença);
        System.out.println("O produto dos Nums é: " + produto);   
        System.out.println("O quociente dos Nums é: " + quociente);

        scanner.close();
    }
}
